
<mvc:View controllerName="salesext.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic" xmlns:footerbar="sap.ushell.ui.footerbar">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:content>
			<IconTabBar id="filterTabBar" headerBackgroundDesign="Translucent" expandable="false" select="onFilterTabBarSelect"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="_IDGenIconTabFilter1" icon="sap-icon://sales-order" key=" " text="{i18n>allFilterText}"/>
					<IconTabSeparator id="_IDGenIconTabSeparator"/>
					<IconTabFilter id="_IDGenIconTabFilter2" icon="sap-icon://status-error" iconColor="Negative" key="N" text="{i18n>newFilterText}"/>
					<IconTabFilter id="_IDGenIconTabFilter3" icon="sap-icon://status-in-process" iconColor="Critical" key="P" text="{i18n>inProgressFilterText}"/>
					<IconTabFilter id="_IDGenIconTabFilter4" icon="sap-icon://status-completed" iconColor="Positive" key="C" text="{i18n>closedFilterText}"/>
					<IconTabFilter id="_IDGenIconTabFilter5" icon="sap-icon://status-inactive" iconColor="Neutral" key="X" text="{i18n>canceledFilterText}"/>
				</items>
				<content>
					<Table id="table" width="auto" items="{ path: '/SalesOrder_ext', sorter: { path: 'ChangedAt', descending: true } }"
						noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
						updateFinished="onUpdateFinished">
						<headerToolbar>
							<Toolbar id="_IDGenToolbar">
								<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
								<ToolbarSpacer id="_IDGenToolbarSpacer"/>
								<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto"></SearchField>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column id="nameColumn" width="12%">
								<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
							</Column>
							<Column id="_IDGenColumn">
								<Text id="_IDGenText" text="{i18n>tableCustomerColumnTitle}"/>
							</Column>
							<Column id="_IDGenColumn1" width="12%">
								<Text id="_IDGenText1" text="{i18n>tableLifecycleStatusColumnTitle}"/>
							</Column>
							<Column id="_IDGenColumn2" width="12%">
								<Text id="_IDGenText2" text="{i18n>tableDeliveryStatusColumnTitle}"/>
							</Column>
							<Column id="_IDGenColumn3" width="12%">
								<Text id="_IDGenText3" text="{i18n>tableBillingStatusColumnTitle}"/>
							</Column>
							<Column id="_IDGenColumn4" width="12%">
								<Text id="_IDGenText4" text="{i18n>tableChangedAtColumnTitle}"/>
							</Column>
							<Column id="unitNumberColumn" hAlign="End" width="12%">
								<Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem id="_IDGenColumnListItem" type="Navigation" press="onPress">
								<cells>
									<ObjectIdentifier id="_IDGenObjectIdentifier" title="{SalesOrderID}"/>
									<Text id="_IDGenText5" text="{CustomerName}"/>
									<Text id="_IDGenText6" text="{LifecycleStatusDescription}"/>
									<Text id="_IDGenText7" text="{DeliveryStatusDescription}"/>
									<Text id="_IDGenText8" text="{BillingStatusDescription}"/>
									<Text id="_IDGenText9" text="{path: 'ChangedAt', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }"/>
									<ObjectNumber id="_IDGenObjectNumber" number="{ path: 'GrossAmount', formatter: '.formatter.numberUnit' }" unit="{CurrencyCode}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</IconTabBar>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>