 <mvc:View controllerName="orderapp.controller.Detail"
  displayBlock="true"
  xmlns="sap.uxap"
  xmlns:m="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core">

  <ObjectPageLayout id="ObjectPageLayout" showFooter="{viewModel>/editable}" upperCaseAnchorBar="false" busy="{viewModel>/busy}">
    <headerTitle>
      <ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1" >
        <heading>
          <m:VBox id="_IDGenVBox">
            <m:Title id="_IDGenTitle1" text="{orderId}"/>
            <m:Text id="_IDGenText14" text="{to_status/name}"/>          
          </m:VBox>
        </heading>
        <actions>
          <m:Button id="_IDGenButton2" text="Edit" type="Emphasized" press="onEdit" visible="{= !${viewModel>/editable}}"/>
          <m:Button id="_IDGenButton3" text="Delete" type="Ghost" press="onDelete" visible="{= !${viewModel>/editable}}"/>
        </actions>
      </ObjectPageDynamicHeaderTitle>
    </headerTitle>
    <sections>
      <ObjectPageSection id="orderInfo" titleUppercase="false" title="Order Information">
        <subSections>
          <ObjectPageSubSection id="_IDGenObjectPageSubSection">
            <blocks>
              <core:Fragment fragmentName="orderapp.fragments.Form" type="XML" />
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>

      <ObjectPageSection id="orderItems" titleUppercase="false" title="Order Items">
        <subSections>
          <ObjectPageSubSection id="_IDGenObjectPageSubSection1">
            <blocks>
              <core:Fragment fragmentName="orderapp.fragments.Items" type="XML" />
            </blocks>
          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>
		<footer>
			<m:OverflowToolbar id="_IDGenOverflowToolbar">
				<m:ToolbarSpacer id="_IDGenToolbarSpacer1" />
        <m:Text id="_IDGenText15" text="{viewModel>/savingStatus}" visible="{viewModel>/isStatusVisible}"/>
				<m:Button id="_IDGenButton4" type="Emphasized" text="Save" press="onSave"/>
				<m:Button id="_IDGenButton5" type="Ghost" text="Cancel" press="onCancel"/>
			</m:OverflowToolbar>
		</footer>    
  </ObjectPageLayout>
</mvc:View>